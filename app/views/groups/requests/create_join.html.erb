<% @title_box = capture do -%>
  <h1><%=h I18n.t(:send_join_request, :group_name => @group.display_name) %></h1>
<% end -%>

<blockquote>
  <p>
    <% link_to_requests_html = link_to(I18n.t(:my_requests_link), :controller => '/me/requests', :view => 'from_me')%>
    <%= I18n.t(:join_request_info, :link_to_requests => link_to_requests_html) %>
  </p>
  <%- form_tag(:controller => 'groups/requests', :action => 'create_join', :id => @group) do -%>
    <!-- <p>Optional message included with the join request:<br/>
      <%# text_area_tag 'message', params[:message], :rows => 2, :cols => 50 %>
    </p> -->
    <%= submit_tag I18n.t(:send_request_button), :name => 'send' %>
    <%= submit_tag I18n.t(:cancel), :name => 'cancel' %>
  <% end -%>
</blockquote>

