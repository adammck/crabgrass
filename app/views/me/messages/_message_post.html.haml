%tr
  %td.avatar
    = link_to_user message_post.user, :avatar => :small, :label => ''
  %td.name
    = link_to_user message_post.user, :label => message_post.user.try.login
    %span.date= friendly_date(message_post.try.created_at)
  %td.message-post
    - if message_post == last_post
      %a(name="last")
    = message_post.body_html
