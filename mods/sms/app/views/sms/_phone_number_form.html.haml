%p
  %div
    %label{ :for => "user_phone_number" }
      = I18n.t(:phone_number)

  %div
    = text_field :user, :phone_number

    - if @user.phone_number_verified
      %span.verified
        Verified

    - else
      %span.unverified
        Unverified

  %div.field-help
    %p
      = I18n.t(:phone_number_why)
